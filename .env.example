# ================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================
PORT=3000
NODE_ENV=development

# ================================
# CONFIGURACIÓN DE ARCHIVOS
# ================================
EXCEL_FILE_PATH=./data/input/archivo.xlsx
OUTPUT_JSON_PATH=./data/output.json

# ================================
# CONFIGURACIÓN DE VTEX API
# ================================
VTEX_API_URL=https://tu-account.vtexcommercestable.com.br/api
VTEX_ENDPOINT=/dataentities/products/documents
VTEX_APP_KEY=tu_app_key_aqui
VTEX_APP_TOKEN=tu_app_token_aqui
VTEX_ACCOUNT=tu-account-name

# ================================
# CONFIGURACIÓN DEL CRON JOB
# ================================
CRON_SCHEDULE=*/10 * * * *

# Ejecutar tarea programada inmediatamente al iniciar el servidor
RUN_ON_STARTUP=true

# ================================
# CONFIGURACIÓN DE SEGURIDAD
# ================================
API_SECRET_TOKEN=your_secret_token_here
ENABLE_AUTH=false

# ================================
# CONFIGURACIÓN DE LOGS
# ================================
LOG_LEVEL=info
LOG_DIR=./logs